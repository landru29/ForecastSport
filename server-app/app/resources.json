{
    "login": {
        "controller": "resources/login.js",
        "acl": {
            "POST": ["all"]
        }
    },
    "facebook": {
        "controller": "resources/facebook.js",
        "acl": {
            "GET": ["all"]
        }
    },
    "user": {
        "controller": "resources/user.js",
        "acl": {
            "GET": ["user", "admin"]
        }
    },
    "refresh-token": {
        "controller": "resources/refresh-token.js",
        "acl": {
            "POST": ["all"]
        }
    },
    "reset-password": {
        "controller": "resources/reset-password.js",
        "acl": {
            "GET": ["all"],
            "POST": ["all"]
        }
    }
}